{
  "name": "port-scanner",
  "version": "1.0.0",
  "description": "Website that scans local ports",
  "main": "index.js",
  "scripts": {
    "copy": "copyfiles ./static/** ./dist/",
    "build": "npx tsc && npm run copy",
    "start": "npm run build && node dist/app.js",
    "prepare": "husky install"
  },
  "author": "Bas van de Louw",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^4.17.1",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.34.0",
    "eslint-config-standard-with-typescript": "^34.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.6.1",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.2",
    "prettier": "^2.8.4",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "express": "^4.17.1"
  },
  "lint-staged": {
    "**/*.{js,ts}": [
      "npx prettier --write",
      "npx eslint --fix"
    ],
    "**/*.{html,css,md}": [
      "npx prettier --write"
    ]
  }
}
